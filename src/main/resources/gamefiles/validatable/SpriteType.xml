<gamedata>
    <complexType name = "spriteTypes">
        <element name="spriteType" type="spriteType" multiple="yes"/>
    </complexType>

    <complexType name = "spriteType">
        <element name="name" type="qString"/>
        <element name="texturefile" type="qString"/>
        <element name="effectFile" type="qString"/>
        <element name="legacy_lazy_load" type="boolean"/>
    </complexType>

    <complexType name="positionD">
        <element name="x" type="double"/>
        <element name="y" type="double"/>
    </complexType>

    <complexType name="positionI">
        <element name="x" type="integer"/>
        <element name="y" type="integer"/>
    </complexType>

    <complexType name = "animation">
        <element name = "animationmaskfile" type="filepath"/>
        <element name = "animationtexturefile" type="filepath"/>
        <element name = "animationrotation" type="double"/>
        <element name = "animationlooping" type="boolean"/>
        <element name = "animationtime" type="double"/>
        <element name = "animationdelay" type="double"/>
        <element name = "animationblendmode" type="qString"/>
        <element name = "animationtype" type="qString"/>
        <element name = "animationrotationoffset" type="positionD"/>
        <element name = "animationtexturescale" type="positionD"/>
    </complexType>

    <complexType name = "spriteType">

    </complexType>

    <file type="SPRITE_TYPES_FILE">
        <element name="spriteTypes" type="spriteTypes" multiple="yes"/>
    </file>
</gamedata>